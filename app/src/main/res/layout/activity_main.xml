<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        tools:context=".MainActivity" >

    <TextView
        android:id="@+id/expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:maxLines="1"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/limpar"
                style="@style/Operadores_botoes"
                android:text="C"/>

            <TextView
                android:id="@+id/divisao"
                style="@style/Operadores_botoes"
                android:text="/"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/botao_7"
                style="@style/Numeros_botoes"
                android:text="7"/>

            <TextView
                android:id="@+id/botao_8"
                style="@style/Numeros_botoes"
                android:text="8"/>

            <TextView
                android:id="@+id/botao_9"
                style="@style/Numeros_botoes"
                android:text="9"/>

            <TextView
                android:id="@+id/multiplicacao"
                style="@style/Operadores_botoes"
                android:text="x"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/botao_4"
                style="@style/Numeros_botoes"
                android:text="4"/>

            <TextView
                android:id="@+id/botao_5"
                style="@style/Numeros_botoes"
                android:text="5"/>

            <TextView
                android:id="@+id/botao_6"
                style="@style/Numeros_botoes"
                android:text="6"/>

            <TextView
                android:id="@+id/subtracao"
                style="@style/Operadores_botoes"
                android:text="-"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/botao_1"
                style="@style/Numeros_botoes"
                android:text="1"/>

            <TextView
                android:id="@+id/botao_2"
                style="@style/Numeros_botoes"
                android:text="2"/>

            <TextView
                android:id="@+id/botao_3"
                style="@style/Numeros_botoes"
                android:text="3"/>

            <TextView
                android:id="@+id/adicao"
                style="@style/Operadores_botoes"
                android:text="+"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/ponto"
                style="@style/Numeros_botoes"
                android:text="."/>

            <TextView
                android:id="@+id/botao_0"
                style="@style/Numeros_botoes"
                android:text="0"/>

            <TextView
                android:id="@+id/voltar"
                style="@style/Numeros_botoes"
                android:text="Back"/>


            <TextView
                android:id="@+id/igual"
                style="@style/Operadores_botoes"
                android:text="="/>

        </LinearLayout>

    </LinearLayout>

